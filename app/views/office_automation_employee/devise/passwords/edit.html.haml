.row
  .col-md-2
  .col-md-8
    = render 'office_automation_employee/shared/flash'

    .panel.panel-heading
      %strong Change your password
    .panel.panel-body
      .conatiner-fluid
        .col-md-2
        .col-md-8
          = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|

            .form-group
              = f.hidden_field :reset_password_token
              = f.input :password, autofocus: true, input_html: { class: "form form-control", placeholder: "Enter   new password", required: true, maxlength: 100 }

            .form-group
              = f.input :password_confirmation, input_html: { class: "form form-control", placeholder: "Confirm password", required: true, maxlength: 100 }

            .form-group
              = f.submit "Change my password", class: "btn btn-primary"

            .form-group
              = render "office_automation_employee/devise/shared/links"
