.row
  .col-md-2
  .col-md-8
    = render 'office_automation_employee/shared/flash'

    .panel.panel-default
      .panel-heading
        %strong= t 'devise.invitations.edit.header'
      .panel-body
        .container-fluid
          .col-md-2
          .col-md-8
            = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|

              .form-group
                = f.hidden_field :invitation_token
                = f.input :password, autofocus: true, input_html: { class: "form form-control", placeholder: "Enter password", maxlength: 100, required: true }

              .form-group
                = f.input :password_confirmation, input_html: { class: "form form-control", placeholder: "Confirm password", maxlength: 100, required: true }

              .form-group= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary"
