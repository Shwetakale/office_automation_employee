.row
  .col-md-2
  .col-md-8
    = render 'office_automation_employee/shared/flash'

    .panel.panel-default
      .panel-heading
        %strong= t "devise.invitations.new.header"

      .panel-body
        .container-fluid
          .col-md-2
          .col-md-8
            = simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f|
              .form-group
                - resource.class.invite_key_fields.each do |field|
                  = f.input field, as: :text, autofocus: true, input_html: { class: "form-control", placeholder: "Enter Email addresses separated by ','\t\t user1@domain.com, user2@domain.com", required: true, rows: 5 }

              .form-group
                - unless @invalid_email.nil?
                  - @invalid_email.each do |user|
                    .list-group-item.list-group-item-danger
                      = user.email + ' ' + user.errors.messages[:email].last

              .form-group= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary"
