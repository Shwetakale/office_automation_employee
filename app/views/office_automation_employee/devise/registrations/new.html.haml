.row
  .col-md-2
  .col-md-8
    = render "office_automation_employee/shared/flash"

    .panel.panel-default
      .panel.panel-heading
        %strong Sign Up

      .panel.panel.body
        .container-fluid
          .col-md-2
          .col-md-8
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), input_html: { role: :form } ) do |f|

              .form-group
                = f.input :email, autofocus: true, input_html: { class: "form-control", maxlength: 50, placeholder: "example@domain.com", required: true }

              .form-group
                = f.input :password,input_html: { class: "form-control", maxlength: 100, placeholder: "Enter Password", required: true }

              .form-group
                = f.input :password_confirmation, input_html: { class: "form-control", maxlength: 100, placeholder: "Reconfirm Password", required: true }

              .form-group= f.submit "Sign up",  class: "btn btn-primary"

              .form-group= render "office_automation_employee/devise/shared/links"
