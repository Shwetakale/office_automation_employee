.col-md-2
.col-md-8
  .form-group
    = simple_form_for(@user, url: registration_path(@user), remote: true, input_html: { role: :form }) do |f|
      .form-group
        = f.input :password, autofocus: true, input_html: { class: 'form-control', placeholder: "Enter new password", maxlength: 100 }
      .form-group
        = f.input :password_confirmation, input_html: { class: 'form-control', placeholder: "Confirm new password", maxlength: 100 }
      .form-group
        = f.input :current_password, input_html: { class: 'form-control', placeholder: "Enter old password", maxlength: 100 }
      .form-group= f.submit 'Update Password', class: 'btn btn-primary'
