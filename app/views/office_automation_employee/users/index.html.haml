.row
  .col-md-2
  .col-md-8
    = render 'office_automation_employee/shared/flash'
    .panel.panel-default
      .panel.panel-heading
        %strong Employees
      .panel.panel-body
        .col-md-15
          %table.table.table-hover
            %thead
              %tr
                %th #
                %th Profile Picture
                %th Name
                %th Email
                %th Roles
                %th= "Status" if can? :manage, OfficeAutomationEmployee::User
                %th= "Edit" if can? :manage, OfficeAutomationEmployee::User
            %tbody.rowlink{ "data-link" => "row" }
              - @company.users.each_with_index do |user, index|
                - next if user.status.eql? "Pending" and cannot? :manage, user
                %tr
                  %td= index + 1
                  %td
                    %a{ href: office_automation_employee.company_user_path(@company, user) }
                      = image_tag user.image.thumb.url, class: "img-circle", size: "60x60"
                  %td= user.fullname
                  %td= user.email
                  %td= user.roles.to_sentence
                  %td= user.status if can? :manage, user
                  %td.rowlink-skip= link_to(content_tag(:span, "", class: "glyphicon glyphicon-edit"), office_automation_employee.edit_company_user_path(user.company, user), class: "btn btn-default") if can? :manage,user
