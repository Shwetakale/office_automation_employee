.row
  .col-md-12
    = render 'office_automation_employee/shared/flash'
    .panel.panel-default
      .panel-heading
        .row
          .col-md-4
            %strong Employees
          = form_tag company_users_path(company_id: @company) , method: 'get', id: 'users_search' do

            .col-md-2
            .col-md-6
              .input-group.input-group-sm
                = text_field_tag :q, params[:q], class: "form-control", maxlength: 20, placeholder: "Enter First Name/ Last Name/ Email id"
                %span.input-group-btn
                  = button_tag(type: 'submit', class: "btn btn-default active") do
                    %span.glyphicon.glyphicon-search
      .panel-body
        .col-md-15
          - if @failure_message
            %center
              %strong= @failure_message
          - else
            = render partial: "office_automation_employee/users/employee_list", locals: { users: @users }
        = paginate @users  
