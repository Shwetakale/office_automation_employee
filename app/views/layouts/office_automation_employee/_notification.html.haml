- if signed_in? and can? :edit, OfficeAutomationEmployee::Company and cannot? :manage, OfficeAutomationEmployee::Company
  %ul.nav.navbar-nav.navbar-right
    - if current_user.csv_downloaded?
      %li= link_to image_tag("office_automation_employee/default_bell.png"), "#", id: :bell, data: { placement: :bottom, container: :body, title: "You currently have no notifications" }

    - else
      %li
        = link_to image_tag("office_automation_employee/alert_bell.png"), "#", class: "dropdown-toggle", data: { toggle: "dropdown" }
        %ul.dropdown-menu
          %li= link_to content_tag(:span, "", class: "glyphicon glyphicon-download-alt") + " Download invalid CSV file", office_automation_employee.download_csv_path

%script
  $('#bell').tooltip();
